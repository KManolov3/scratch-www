<manifest xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <queries>
        <provider android:authorities="com.bluefletch.launcherprovider" />
    </queries>

    <application
            android:name=".MainApplication"
            android:label="@string/app_name"
            android:icon="@mipmap/batch_count_icon"
            android:allowBackup="false"
            android:theme="@style/LoadingScreenTheme">
        <activity
                android:name=".activities.CycleCountActivity"
                android:process=":cycleCount"
                android:label="@string/cycle_count_app_name"
                android:icon="@mipmap/cycle_count_icon"
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
                android:launchMode="singleTask"
                android:documentLaunchMode="intoExisting"
                android:windowSoftInputMode="adjustResize"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.advanceautoparts.instoreapps.SCAN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.advanceautoparts.instoreapps.cyclecount.SCANNER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".activities.BatchCountActivity"
                android:process=":batchCount"
                android:label="@string/batch_count_app_name"
                android:icon="@mipmap/batch_count_icon"
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
                android:launchMode="singleTask"
                android:documentLaunchMode="intoExisting"
                android:windowSoftInputMode="adjustResize"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.advanceautoparts.instoreapps.SCAN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.advanceautoparts.instoreapps.batchcount.SCANNER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.OutageActivity"
            android:label="@string/outage_app_name"
            android:icon="@mipmap/outage_icon"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
            android:launchMode="singleTask"
            android:documentLaunchMode="intoExisting"
            android:windowSoftInputMode="adjustResize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.advanceautoparts.instoreapps.SCAN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.advanceautoparts.instoreapps.outage.SCANNER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".activities.ItemLookupActivity"
                android:process=":itemLookup"
                android:label="@string/item_lookup_app_name"
                android:icon="@mipmap/item_lookup_icon"
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
                android:launchMode="singleTask"
                android:documentLaunchMode="intoExisting"
                android:windowSoftInputMode="adjustResize"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.advanceautoparts.instoreapps.SCAN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.advanceautoparts.instoreapps.itemlookup.SCANNER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".activities.TruckDetailScanActivity"
                android:process=":truckDetailScan"
                android:label="@string/truck_scan_app_name"
                android:icon="@mipmap/receiving_icon"
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
                android:launchMode="singleTask"
                android:documentLaunchMode="intoExisting"
                android:windowSoftInputMode="adjustResize"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="com.advanceautoparts.instoreapps.SCAN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.advanceautoparts.instoreapps.truckscan.SCANNER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
